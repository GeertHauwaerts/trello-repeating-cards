{
  "name": "geerthauwaerts/trello-repeating-cards",
  "description": "Trello - Add Repeating Cards",
  "keywords": [
    "trello",
    "repeat"
  ],
  "homepage": "https://github.com/geerthauwaerts/trello-repeating-cards",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Geert Hauwaerts",
      "email": "geert@hauwaerts.be"
    }
  ],
  "require": {
    "php": ">=8.0",
    "nesbot/carbon": "^2.67",
    "nyholm/psr7": "^1.8",
    "php-http/guzzle7-adapter": "^1.0",
    "semaio/php-trello-api": "^1.2",
    "vlucas/phpdotenv": "^5.5"
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "autoload": {
    "psr-4": {
      "App\\": "app"
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=phpcs.xml --extensions=php app/"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7"
  }
}
